<%- include("header") -%>

    <h3>Autheticate your account</h3>
    <p>Your protection is our top priority. Please confirm your<br> account by entering the autherization code sent to <br> <%= user.username %></p>
    <form action="/codeVerify" method="POST">
        <input type="text" class="partitioned" name="code" maxlength="6" onkeyup="if(this.value.length == 6) this.blur()" onfocus="if(this.value.length == 3) this.blur()" autofocus>
        <input type="submit" class="submitbtn" value="verify and signin">
        <input type="text" value=<%= user._id %> style="display:none" name="clientId">
    </form>

<%- include("footer") -%>